<p id="notice"><%= notice %></p>

<h1>Brides</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Birth date</th>
      <th>Sex</th>
      <th>Country</th>
      <th>District</th>
      <th>Sector</th>
      <th>Cells</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brides.each do |bride| %>
      <tr>
        <td><%= bride.name %></td>
        <td><%= bride.email %></td>
        <td><%= bride.birth_date %></td>
        <td><%= bride.sex %></td>
        <td><%= bride.country %></td>
        <td><%= bride.district %></td>
        <td><%= bride.sector %></td>
        <td><%= bride.cells %></td>
        <td><%= bride.phone_number %></td>
        <td><%= link_to 'Show', bride %></td>
        <td><%= link_to 'Edit', edit_bride_path(bride) %></td>
        <td><%= link_to 'Destroy', bride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

