<p id="notice"><%= notice %></p>

<h1>Grooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Birth date</th>
      <th>Sex</th>
      <th>Country</th>
      <th>District</th>
      <th>Sector</th>
      <th>Cells</th>
      <th>Phone number</th>
      <th>Your wife </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grooms.each do |groom| %>
      <tr>
        <td><%= groom.name %></td>
        <td><%= groom.email %></td>
        <td><%= groom.birth_date %></td>
        <td><%= groom.sex %></td>
        <td><%= groom.country %></td>
        <td><%= groom.district %></td>
        <td><%= groom.sector %></td>
        <td><%= groom.cells %></td>
        <td><%= groom.phone_number %></td>
        <td><%= groom.bride.name %></td>
        <td><%= link_to 'Show', groom %></td>
        <td><%= link_to 'Edit', edit_groom_path(groom) %></td>
        <td><%= link_to 'Destroy', groom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

